  <%= form_with model: [@room, item], data: { 'turbo-frame' => '_top' } do |form| %>
    <%= form.label :name, class: 'block text-sm font-medium text-gray-700' %>
    <div class="mt-1">
      <%= form.text_field :name, placeholder: 'Enter item name', class: 'shadow-sm focus:ring-blue-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md' %>
    </div>
    <div class="flex justify-between mt-3">
      <%= link_to 'Not now', '#', class: 'py-2 px-4 text-gray-500', 'data-turbo-stream': '_top' %>
      <%= form.submit class: 'justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
    </div>
  <% end %>
